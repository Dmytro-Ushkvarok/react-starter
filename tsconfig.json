{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@app/*": ["./src/modules/app/*"],
      "@app": ["./src/modules/app/index"],
      "@auth/*": ["./src/modules/auth/*"],
      "@auth": ["./src/modules/auth/index"],
      "@core/*": ["./src/modules/core/*"],
      "@localization": ["./src/modules/localization/index"],
      "@localization/*": ["./src/modules/localization/*"],
      "@router/*": ["./src/modules/router/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "@types"]
}
